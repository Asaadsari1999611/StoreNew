@model IEnumerable<StoreNew.Models.Color>

@{
    ViewData["Title"] = "Colorproduct";
    Layout = "~/Views/Shared/_DashpordLayout.cshtml";
}

<h3 style="margin-left:30%;"><span class="titl">C</span>olors<span class="titl">O</span>f<span class="titl">@ViewBag.productname</span></h3>

<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<p>
    <a asp-controller="Colors" asp-action="Create" asp-route-productid="@ViewBag.productid"><i class="fa fa-user-plus"  style="font-size:25px;color:black;margin-left:20px;"></i></a>
</p>

<table class="table" id="example1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Namecolors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagepath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Namecolors)
                </td>
                <td>
                    <img src=@Url.Content("~/images/"+item.Imagepath)
                         asp-append-version="true"
                         style="border-radius:20%;" widh="100px" height="100px" />
                </td>
                <td>
                    @ViewBag.productname
                </td>
                <td>

                    <a class="mang" asp-controller="Colors" asp-action="Edit" asp-route-id="@item.Id" asp-route-productid="@ViewBag.idproduct">Edit</a> |
                    <a class="mang" asp-controller="Colors" asp-action="Details" asp-route-id="@item.Id" asp-route-productid="@ViewBag.idproduct">Details</a> |
                    <a class="mang" asp-controller="Colors" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<script>
    $(document).ready(
        function () { $('#example1').DataTable({ dom: 'Bfrtip', buttons: ['copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5'] }); });


</script>
<style>

    div.dt-buttons {
        margin-top: 25px;
        margin-bottom: 20px;
    }

        div.dt-buttons button {
            background-color: #ffbe33;
            color: white;
            font-weight: bold;
        }

    span.titl {
        color: #ffbe33 !important;
    }

    div.dt-buttons button:hover {
        background-color: black !important;
        color: #ffbe33 !important;
        font-weight: bold;
    }

    .buttn.dt-button {
        background-color: #ffbe33;
    }

    a.mang {
        text-decoration: none;
        font-weight: bold;
        background-color: #ffbe33;
        color: white;
        padding: 2px;
    }

        a.mang:hover {
            text-decoration: none;
            font-weight: bold;
            background-color: black;
            color: #ffbe33;
            padding: 2px;
        }

  
</style>