@model VerifyCode
@{
    ViewData["Title"] = "VerifyCode";
	Layout = "~/Views/Shared/_HomeLayout1.cshtml";
}


<section class="ftco-section" style="margin-top:-80px">
	<div class="container">

		<div class="row justify-content-center">
			<div class="col-md-7 col-lg-5">
				<div class="login-wrap">
					<div class="img" style="background-image: url(images/bg.jpg);"></div>
					<h3 class="text-center mb-4">Forget</h3>
					<form class="signup-form" asp-action="VerifyCode" method="post">
						<div class="form-group mb-3">
							<input asp-for="Code" class="form-control" placeholder="Enter Code">
							<span class="text-danger" asp-validation-for="Code"></span>

						</div>

						<div class="form-group">
							<button type="submit" class="form-control btn btn-primary submit px-3">Send now</button>
						</div>
					</form>

					<p>Go to login page<a asp-action="login" style="color:#9d6b00f5;padding-left:5px;">login</a></p>
					<p>Go to register page<a asp-action="Rigester" style="color:#9d6b00f5;padding-left:5px;">Register</a></p>
					<p>Go to forget page<a asp-action="Forget" style="color:#9d6b00f5;padding-left:5px;">Register</a></p>

				</div>
			</div>
		</div>
	</div>
</section>

