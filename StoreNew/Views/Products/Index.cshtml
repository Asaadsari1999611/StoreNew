@model IEnumerable<StoreNew.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashpordLayout.cshtml";
}

<h3 style="margin-left:45%;"><span class="titl">P</span>roducts</h3>
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<p>
    <a asp-action="Create"><i class="fa fa-user-plus" aria-hidden="true" style="font-size:25px;color:black;margin-left:20px;"></i></a>
</p>
<table class="table" id="example1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stochquntity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagefile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stochquntity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @* @Html.DisplayFor(modelItem => item.ImagePath)*@
                    <img src=@Url.Content("~/images/"+item.Imagepath)
                         asp-append-version="true"
                         style="border-radius:20%;" widh="100px" height="100px" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Gategoryname)
                   
                      
                    
                </td>
                <td>

                    <a class="mang" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="mang" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="mang" asp-action="Delete" asp-route-id="@item.Id">Delete</a>|
                   @{int count=0;}
                    @foreach (var det in @ViewBag.details)
                    {
                        if (item.Id == det.Productid)
                        {
                            count++;

                    }
                    }
                    @if (count > 0)
                    {
                        <a class="mang" asp-controller="Admin" asp-action="Detailsproduct" asp-route-id="@item.Id">More Details</a>
 

                        <a href="#" onclick="event.preventDefault();" style="background-color:black; " class="mang"  >Add Details</a>

                    }
                    else
                    {
                        <a class="mang" href="#" onclick="event.preventDefault();" style="background-color:black; ">More Details</a>
 

                        <a  class="mang" asp-action="Create" asp-controller="Details" >Add Details</a>

                    }

                    |<a class="mang" asp-action="Index" asp-controller="Color" asp-route-id="@item.Id">Color</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<script>
    $(document).ready(
        function () { $('#example1').DataTable({ dom: 'Bfrtip', buttons: ['copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5'] }); });


</script>

