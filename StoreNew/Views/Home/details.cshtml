                <div class="name">@item.Maincamera</div>
            </div>


        </div>
        <div class="cards">
            <div class="images" style="background-color:salmon">
                <img src="~/home/details/images/self.jpg"
                     asp-append-version="true" />
            </div>
            <div class="names">
                <div class="name">@item.Selfecamera</div>
            </div>


        </div>
        <div class="cards">
            <div class="images" style="background-color:forestgreen">
                <img src="~/home/details/images/batary.jpg"
                     asp-append-version="true" />
            </div>
            <div class="names">
                <div class="name">@item.Battery</div>
            </div>


        </div>

    }



</div>


<style>
    p.titl {
        text-align: center;
        font-size: 35px;
        margin-top: 20px;
    }

    span {
        color: #ffbe33;
    }

    .all {
        display: grid;
        grid-template-columns: auto auto auto auto auto;
        justify-content: space-evenly;
    }

    .cards {
        margin: 25px 0px;
        background-color: #222831db;
        border-radius: 15px;
        text-align: center;
        height: 235px;
        width: 200px;
    }

        .cards:hover {
            cursor: pointer;
        }

            .cards:hover .images {
                padding: 0px;
            }

            .cards:hover .name {
                color: white;
                border-bottom: 1px solid #ffbe33;
            }


    .images {
        width: 100%;
        border-radius: 15px;
        padding: 2.5%;
        transition: 0.5s;
        background-color: red;
        height: 140px;
    }

        .images img {
            width: 100%;
            height: 100%;
            border-radius: 15px;
        }

    .names {
        margin-top: 15px;
        width: 100%;
        text-align: center;
        display: flex;
        justify-content: center;
    }

    .name {
        font-size: 25px;
        color: #ffffffa8;
        width: fit-content;
    }

</style>

