
@{
    ViewData["Title"] = "details";
}


@*start check type user customer or gust*@
@{
    string typeuser = "";
    if (@ViewBag.typeuser == 0)
        typeuser = "Gust";
    else
        typeuser = "Customer";

}
@*end check type user customer or gust*@



@*start change layout*@
@if (typeuser == "Customer")
{
    Layout = "~/Views/Shared/_HomeLoginLayout1.cshtml";

}
else if (typeuser == "Gust")
{
    Layout = "~/Views/Shared/_HomeLayout1.cshtml";

}
@*end change layout*@



<p class="titl"><span>D</span>etails</p>
<br />
<br />

<!-- category section -->
<div class="all">
    @foreach (var item in Model)
    {
        <div class="cards">
            <div class="images" style="background-color:black">
                <img src="~/home/details/images/virsion.jpg"
                     asp-append-version="true" />
            </div>
            <div class="names">
                <div class="name">@item.Launch</div>
            </div>


        </div>
        <div class="cards">
            <div class="images" style="background-color:dodgerblue">
                <img src="~/home/details/images/dims.jpg"
                     asp-append-version="true" height="140px" />
            </div>
            <div class="names">
                <div class="name">@item.Dimensions</div>
            </div>


        </div>
        <div class="cards">
            <div class="images" style="background-color:aquamarine">
                <img src="~/home/details/images/weight.jpg"
                     asp-append-version="true" />
            </div>
            <div class="names">
                <div class="name">@item.Weight</div>
            </div>


        </div>
        <div class="cards">
            <div class="images" style="background-color:gold">
                <img src="~/home/details/images/type.jpg"
                     asp-append-version="true" />
            </div>
            <div class="names">
                <div class="name">@item.Typee</div>
            </div>


        </div>
        <div class="cards">
            <div class="images">
                <img src="~/home/details/images/size.jpg"
                     asp-append-version="true" />
            </div>
            <div class="names">
                <div class="name">@item.Sizee</div>
            </div>


        </div>
        <div class="cards">
            <div class="images" style="background-color:silver">
                <img src="~/home/details/images/os.jpg"
                     asp-append-version="true" />
            </div>
            <div class="names">
                <div class="name">@item.Os</div>
            </div>


        </div>
        <div class="cards">
            <div class="images" style="background-color:orange">
                <img src="~/home/details/images/memory.jpg"
