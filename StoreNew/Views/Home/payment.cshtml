
@{
    ViewData["Title"] = "payment";
    Layout = "~/Views/Shared/_HomeLoginLayout1.cshtml";
}


<h1 style="margin-left:45%;margin-top:50px;"><span style="color:orange">P</span>ayment</h1>
<h2 style="background-color:red;color:white;width:fit-content;margin-left:39%;border-radius:15px;">@ViewBag.paymenterror</h2>
<div class="row" style="margin-left:450px;margin-top:50px;margin-bottom:150px;">
    <div class="col-md-4">
        <form asp-action="payment">
            <div style="display:flex">
                <div class="form-group" style="margin-left:15px;">
                    <label name="CardNumber" class="control-label" style="margin-left:45px;"></label>
                    <input name="CardNumber" class="form-control" style="width:178px;" placeholder="Card Number" />
                    <span name="CardNumber" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-left:15px;">
                    <label name="Cvv" class="control-label" style="margin-left:25px;"></label>
                    <input name="Cvv" class="form-control" style="width:100px;" placeholder="Cvv" />
                    <span name="Cvv" class="text-danger"></span>
                </div>




            </div>
            <div class="form-group" style="margin-left:100px;margin-top:20px">


                <input type="submit" value="Payment" class="btn btn-primary" style="width:125px;height:50px;font-size:17px;margin-left:5px;border:none" />

            </div>
        </form>

    </div>
</div>
