
@{
  
}


@*start check type user customer or gust*@
@{
    string typeuser = "";
    if (@ViewBag.typeuser == 0)
        typeuser = "Gust";
    else
        typeuser = "Customer";

}
@*end check type user customer or gust*@



@*start change layout*@
@if (typeuser == "Customer")
{
    Layout = "~/Views/Shared/_HomeLoginLayout1.cshtml";

}
else if (typeuser == "Gust")
{
    Layout = "~/Views/Shared/_HomeLayout1.cshtml";

}
@*end change layout*@



<p class="titl"><span>C</span>olors</p>
<br />
<br />


<div class="all">
    @foreach (var item in Model)
    {
        <div class="cards">
            <div class="images">
                <img src=@Url.Content("~/images/"+item.Imagepath)
                     asp-append-version="true" />
            </div>
            <div class="names">
                <div class="name">@item.Namecolors</div>
            </div>
            </div>
    }
    </div>

    <style>
    p.titl {
        text-align: center;
        font-size: 35px;
        margin-top: 20px;
    }

    span {
        color: #ffbe33;
    }

    .all {
        display: grid;
        grid-template-columns: auto auto auto auto;
        justify-content: space-evenly;
    }

    .cards {
        margin: 25px 0px;
        background-color: #222831db;
        border-radius: 15px;
        text-align: center;
        height: 365px;
        width: 250px;
    }

        .cards:hover {
            cursor: pointer;
        }

            .cards:hover .images {
                padding: 0px;
            }



            .cards:hover .name {
                color: white;
                border-bottom: 0.7px solid #ffbe33;
            }




    .images {
        width: 100%;
        border-radius: 15px;
        padding: 2.5%;
        transition: 0.5s;
        height: 190px;
    }

        .images img {
            width: 100%;
            height: 100%;
            border-radius: 15px;
        }

    .names {
        margin-top: 10px;
        width: 100%;
        text-align: center;
        display: flex;
        justify-content: center;
    }

    .name {
        font-size: 25px;
        color: #ffffffa8;
        width: fit-content;
    }</style>
   



