<h1 style="text-align:center;margin-top:40px;margin-bottom:30px;"><span>S</span>end <span>M</span>essage</h1>
<div style="width:100%;text-align:center;">
    <form method="post" style="margin-bottom:50px;">

        <input type="hidden" name="iduser" value="@ViewBag.userid" />

        <input class="text" type="text" name="message" />
        <br />
        <input class="send" type="submit" value="Send" />

    </form>
</div>

<hr />
<h2 style="text-align:center;margin-top:40px;margin-bottom:30px;"><span>O</span>utgoing <span>M</span>essage</h2>
<div style="display:flex;justify-content:center;margin-bottom:50px;">
    <table border="2">
        <thead>
        <th>message</th>
        <th>Send-date</th>
        <th>vision-date</th>
        </thead>
        <tbody>
            @foreach (var outgoing in Model)
            {
                <tr>
                    <td>@outgoing.Message</td>
                    <td>@outgoing.Senddate</td>
                    <td>@outgoing.Visiondate</td>

                </tr>
            }

        </tbody>
    </table>
</div>
<hr />
<h2 style="text-align:center;margin-top:40px;margin-bottom:30px;"><span>I</span>npox <span>M</span>essage</h2>
<div style="display:flex;justify-content:center;margin-bottom:50px;">
    <table border="2">
        <thead>
        <th>message</th>
        <th>Send-date</th>

        </thead>
        <tbody>
            @foreach (var inpox in @ViewBag.inpox)
            {
                <tr>
                    <td>@inpox.Message</td>
                    <td>@inpox.Senddate</td>


                </tr>
            }

        </tbody>
    </table>
</div>
